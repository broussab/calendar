<div class='container'>
  <h1 class='altheader'>Users:</h1>

  <div class="row">
    <div class='col-md-8'>
      <% @users.each do |user| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to "#{user.firstname} #{user.lastname}", user_path(user.id) %>
          </h4>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
