<div class='container'>
  <h1>New Out of Office Event</h1>

  <%= form_for @meeting, url: meetings_path do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :reason %>
    <%= f.text_field :reason %>
  </div>
  <div class="form-group">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, ampm: true%>
  </div>
  <div class="form-group">
    <%= f.label :end_time %>
    <%= f.datetime_select :end_time, ampm: true %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
</div>
<% end %>
