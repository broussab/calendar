<div class='container'>
  <h1 class='altheader'>New Out of Office Event</h1>

  <%= form_for @meeting, url: meetings_path do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <input type="text" name="the_name" value="<%= current_user.full_name %>" disabled="disabled">
  </div>
  <div class="form-group">
    <%= f.label :reason %>
    <%= f.text_field :reason %>
  </div>
  <div class="form-group">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, default: 1.day.from_now.beginning_of_day + 8.hours, ampm: true%>
  </div>
  <div class="form-group">
    <%= f.label :end_time %>
    <%= f.datetime_select :end_time, default: 1.days.from_now.beginning_of_day + 17.hours, ampm: true, step: 15 %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
</div>
<% end %>
