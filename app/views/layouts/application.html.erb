<!DOCTYPE html>
<html>
  <head>
    <title>Out of Office Calendar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <li><%= link_to "Monthly", root_path %></li>
        <li><%= link_to "Weekly", weekly_path %></li>
        <li><%= link_to "Daily", daily_path  %></li>
        <li><%= link_to "Instructions", instructions_path  %></li>
      </ul>
    </div>
    <div class="container">
      <h1 class='jumbotron center bgcolor'>
        LegalShield
        <br>
        Out Of Office Calendar
      </h1>
    </div>

    <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
    <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
    <% end %>

    <%= yield %>
  </body>
</html>
